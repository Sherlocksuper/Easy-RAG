{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@": [
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
  // 排除 node_modules 目录
}
