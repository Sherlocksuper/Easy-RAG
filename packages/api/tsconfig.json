{
  "compilerOptions": {
    "target": "ES2020",                         // 编译目标
    "module": "NodeNext",                    // 模块类型
    "strict": true,                           // 开启严格模式
    "esModuleInterop": true,                 // 支持 ES6 模块导入
    "skipLibCheck": true,                    // 跳过库文件的检查
    "forceConsistentCasingInFileNames": true // 文件名严格区分大小写
  },
  "exclude": ["node_modules"]                 // 排除 node_modules 目录
}
